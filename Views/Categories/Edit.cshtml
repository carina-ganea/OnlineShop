
@model Proiect.Models.Category


<h2>Modify category</h2>

<form method="post" action="/Categories/Edit/@Model.IdCategory">

    @Html.HttpMethodOverride(HttpVerbs.Put)

    @Html.HiddenFor(m => m.IdCategory)

    @Html.Label("CategoryName", "Category name")
    <br />
    @Html.Editor("CategoryName")
    @Html.ValidationMessageFor(m => m.CategoryName, null, new { @class = "text-danger" })
    <br /><br />

    <button class="btn btn-success" type="submit">Save modifications</button>
</form>
